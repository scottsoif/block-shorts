{
  "manifest_version": 3,
  "name": "Block Shorts",
  "version": "1.0",
  "description": "Chrome extension to block YouTube/Facebook Shorts",
  "permissions": ["tabs", "webNavigation", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
